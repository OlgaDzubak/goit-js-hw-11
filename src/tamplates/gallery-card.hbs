{{#each this}}

<div class="gallery_item">
  
  <a class="gallery_link link" href="{{largeImageURL}}">
    <img src='{{webformatURL}}' alt='{{tags}}' loading='lazy' class="gallery_img">
  </a>

  <div class="info">
    <p class="info-item">
      <b>Likes</b>
      {{likes}}
    </p>

    <p class="info-item">
      <b>Views</b>
      {{views}}
    </p>

    <p class="info-item">
      <b>Comments</b>
      {{comments}}
    </p>

    <p class="info-item">
      <b>Downloads</b>
      {{downloads}}
    </p>
  </div>

</div>

{{/each}}